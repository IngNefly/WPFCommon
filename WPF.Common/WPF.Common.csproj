<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--Original Line-->
    <!--<TargetFramework>net8.0</TargetFramework>-->

    <!--Updated: added -windows-->
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!--Added line to recognize the CommandManager object-->
    <UseWPF>true</UseWPF>

    <!-- Package Information -->
    <PackageId>WPFCommon</PackageId>
    <Version>1.0.0</Version>
    <Authors>Carlos Adrián Cervantes Durán</Authors>
    <Company>Personal</Company>
    <Description>
      Library to facilitate the use of commands in WPF applications.
    </Description>
    <PackageTags>wpf command mvvm</PackageTags>
    <RepositoryUrl>https://github.com/IngNefly/WPFCommon</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

  </PropertyGroup>

</Project>
