<UserControl x:Class="WpfUI.Views.SecondTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" >

            <Button Content="{Binding Button1.DisplayName}" 
                    Command="{Binding Button1.Command}"
                    IsEnabled="{Binding Buttoon1.IsEnabled}"
                    ToolTip="{Binding DataContext.Buttoon1.DisplayToolTip}"
                    Padding="20, 15" Margin="20, 15" 
                    FontWeight="Bold" Height="50"/>

            <CheckBox IsChecked="{Binding Path=CheckBoxValue}" VerticalContentAlignment="Center"
                      Command="{Binding Path=CheckCommand.Command}"
                      ToolTip="{Binding Path=CheckCommand.DisplayToolTip}">
                <TextBlock Text="{Binding Path=CheckBoxValue, StringFormat='CheckBox is checked: {0}'}" 
           Margin="10"/>
            </CheckBox>

        </StackPanel>
        
    </Grid>
</UserControl>
